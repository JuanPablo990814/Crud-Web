    <div class="col-6">
        <h2 class="text-primary">Lista de Productos</h2>
    </div>
    <div class="col-6 text-right">
        <a asp-page="AgregarProductos" class="btn btn-primary">Añadir Nuevos Productos</a>
    </div>
