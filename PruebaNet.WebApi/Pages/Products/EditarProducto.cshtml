@page
@model PruebaNet.WebApi.EditarProductoModel
@{
    ViewData["Title"] = "EditarProducto";
}

<br />
<h2 class="text-info">Editar Producto</h2>

<!--Boostrap clases "border"-->
<div class="border">
    <form method="post">
        <!--div asp-validation se encargar de validar los campos obligatorios-->
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        <input type="hidden" asp-for="Producto.plu" />

        <div class="container" style="padding:30px;">
            <!---->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.nombre"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Producto.nombre" class="form-control" />
                    </div>
                    <span asp-validation-for="Producto.nombre" class="text-danger"></span>
                </div>
            </div>
            <!---->
            <!---->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.descripcion"></label>
                    </div>
                    <div class="col-sm-4">
                        @*<textarea asp-for="Producto.descripcion" name="comentarios" cols="20" class="form-control"></textarea>*@
                        <input asp-for="Producto.descripcion" class="form-control"/>
                    </div>
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.marca"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Producto.marca" class="form-control" />
                    </div>
                    <span asp-validation-for="Producto.marca" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.cantidad"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Producto.cantidad" class="form-control" />
                    </div>
                    <span asp-validation-for="Producto.cantidad" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.disponible"></label>
                    </div>
                    <div class="col-sm-4">
                        <select asp-for="Producto.disponible" class="form-control">
                            <option value="" disabled selected>--Seleccione un estado--</option>
                            <option value="Disponible">Disponible</option>
                            <option value="No Disponible">No Disponible</option>
                        </select>
                    </div>
                    <span class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.valor"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Producto.valor" class="form-control" />
                    </div>
                    <span asp-validation-for="Producto.valor" class="text-danger"></span>
                </div>
            </div>

            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2">
                        <label asp-for="Producto.valor_iva"></label>
                    </div>
                    <div class="col-sm-4">
                        <input asp-for="Producto.valor_iva" class="form-control" />
                    </div>
                    <span asp-validation-for="Producto.valor_iva" class="text-danger"></span>
                </div>
            </div>

            <!---Botones-->
            <div class="form-group">
                <div class="row">
                    <div class="col-sm-2 offset-sm-2">
                        <input type="submit" value="Guardar" class="=btn btn-primary form-control">
                    </div>
                    <div class="col-sm-2">
                        <a asp-page="Productos" class="btn btn-success form-control">Volver</a>
                    </div>

                </div>
            </div>
            <!---->


        </div>
    </form>
</div>

